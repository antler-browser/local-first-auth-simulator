{
  "name": "irl-browser-simulator",
  "version": "1.0.0",
  "description": "Development simulator for IRL Browser mini-apps",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "examples"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "build:bundle": "tsup --config tsup.bundle.config.ts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "irl-browser",
    "qr-code",
    "webview",
    "simulator",
    "dev-tools",
    "local-first",
    "did",
    "decentralized-identity",
    "web3",
    "mini-apps"
  ],
  "author": "IRL Browser Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/antler-browser/irl-browser-simulator"
  },
  "dependencies": {
    "@noble/ed25519": "^2.0.0",
    "@noble/hashes": "^2.0.1",
    "base58-universal": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "tsup": "^8.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
